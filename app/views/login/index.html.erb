
<% @page_title = "Login" %>
<div class="Login_Form">
  <h1>Sign Up</h1>

  <%= form_for(:user, :url => {:controller => 'login', :action => 'auth'}) do |f| %>

      <p> Email:</br> <%= f.text_field :email%> </p>
      <p> Password:</br> <%= f.password_field :password%></p>

      <%= f.submit :Login %>
  <% end %>

  <%= link_to 'Sign Up', users_signup_path %>

</div>

